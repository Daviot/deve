    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceFolder}/bin/code/index.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/bin/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Build",
            "program": "${workspaceFolder}/bin/code/index.js",
            "args": ["-b"],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/bin/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Watch",
            "program": "${workspaceFolder}/bin/code/index.js",
            "args": ["-w"],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/bin/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Indexer",
            "program": "${workspaceFolder}/bin/code/index.js",
            "args": ["-i"],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/bin/**/*.js"
            ]
        }
    ]
}
